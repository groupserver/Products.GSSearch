<tal:block tal:define="view options/view; munge_date python:modules['Products.XWFCore.XWFUtils'].munge_date">
  <ul>
    <tal:block tal:repeat="topic view/get_results">
      <li id="abc123" tal:attributes="id topic/topic_id">
        <a class="topic" href="#"
          tal:attributes="href string:/r/topic/${topic/last_post_id}"
          tal:content="topic/subject"/>
        <span class="groupInfo" tal:condition="not:topic/group/only">
          Group:
          <a class="group" href="#" 
            tal:attributes="href topic/group/url;"
            tal:content="topic/group/name"/>
        </span>
        <span class="postCount">
          <span class="cardinal" tal:content="topic/num_posts"/>
          posts
        </span>
        <span class="dates">
            Last post:
            <span class="date" tal:content="python:munge_date(options['context'], topic['last_post_date'])"/>
        </span>
        <ul class="keywords">
          <tal:block tal:repeat="keyword topic/keywords">
            <li tal:content="keyword/word"></li>
          </tal:block>
        </ul>
        <div class="disclosureWidget" id="#"
          tal:define="widgetId string:refinement-${topic/last_post_id}"
          tal:attributes="id widgetId">
          <p>
            <a class="disclosureButton"
              tal:attributes="href string:javascript:showHideDisclosure('${widgetId}')"
              href="#">Refine</a>
          </p>
          <div class="disclosureShowHide" style="display:none;">
            <div>
              <ul>
                <li tal:condition="not:topic/group/only">
                  <a tal:attributes="href topic/group/onlyURL"
                    href="#">Only search the group
                    <cite class="group" 
                      tal:content="topic/group/name"/></a>
                </li>
                <li>
                  <a tal:attributes="href topic/keywordSearch"
                    href="#">Search for documents related to
                    <cite tal:content="topic/subject">this topic</cite></a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </li>
    </tal:block>
  </ul>
  <ul class="navigation">
    <li class="previous"><a href="#" 
      tal:omit-tag="not:view/show_previous"
      tal:attributes="href view/previous_link">More recent 
      <span class="n" tal:content="view/limit"/> topics</a></li>
    <li class="next"><a href="#"
      tal:omit-tag="not:view/show_next"
      tal:attributes="href view/next_link">Older
      <span class="n" tal:content="view/limit"/> topics</a></li>
  </ul>
</tal:block>
