<div id="fileResults" tal:define="view options/view">
  <ol>
    <tal:block tal:repeat="result view/get_results">
       <li><a title="I am a fish"
          tal:attributes="title string:View ${result/title}; 
            href result/url;"
          href="#"><img tal:attributes="src result/icon"/>
          <span class="fileName" tal:content="result/title">Fish</span></a>
        <span class="author" tal:condition="result/author/exists">
          Author: 
          <a class="name" href="#"
            tal:attributes="href result/author/url"
            tal:content="result/author/name">The User</a>
        </span>
        <span  tal:condition="result/post_id">
          Topic:
          <a href="#"
            tal:attributes="href string:/r/topic/${result/post_id}"
            tal:content="result/topic_name">topic</a>
          <span class="groupInfo" tal:condition="not:result/group/only">
            Group
            <a href="#" class="group"
              tal:attributes="href result/group/url"
              tal:content="result/group/name">group</a>
          </span>
        </span>
        <span class="dateInfo">
          Date:
          <span class="date" tal:content="result/date">Whenever</span>
        </span>
        <ul tal:condition="result/tags" class="keywords">
          <tal:block tal:repeat="tag result/tags">
            <li tal:content="tag">Tag</li>
          </tal:block>
        </ul>
        <div class="disclosureWidget" id="#"
          tal:define="widgetId string:refinement-${result/file_id}"
          tal:attributes="id widgetId">
          <p>
            <a class="disclosureButton"
              tal:attributes="href string:javascript:showHideDisclosure('${widgetId}')"
              href="#">Refine</a>
          </p>
          <div class="disclosureShowHide" style="display:none;">
            <div>
              <ul>
                <li tal:condition="not:result/group/only">
                  <a tal:attributes="href result/group/onlyURL"
                    href="#">Only search the group
                    <cite class="group" 
                      tal:content="result/group/name">Name</cite></a>
                </li>
                <li tal:condition="not:result/author/only">
                  <a tal:attributes="href result/author/onlyURL"
                    href="#">Only search for files by
                    <cite class="name"
                      tal:content="result/author/name">Name</cite></a>
                </li>
                <li tal:condition="result/tags">
                  <a tal:attributes="href result/tag_search"
                    href="#">Search for documents related to this file</a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </li>
    </tal:block>
  </ol>
</div><!--fileResults-->

